---
import BaseLayout from '../layouts/BaseLayout.astro';
import ContactInfo from '../components/contact/ContactInfo.astro';
import ContactForm from '../components/contact/ContactForm.svelte';
import GoogleMap from '../components/contact/GoogleMap.svelte';
import { contact } from '../data/contact';
---

<BaseLayout
  title="Kontakt – Sklenářství Ruská | Praha 10 | Vršovice"
  description="Kontaktujte nás – Ruská 40, Praha 10. Telefon +420 774 483 345, email sklenarstvi.ruska@seznam.cz."
  currentPath="/kontakt"
>
  <section class="section">
    <div class="container">
      <div class="kontakt-grid">
        <div class="kontakt-col">
          <h1>Kontaktní informace</h1>
          <ContactInfo />
        </div>

        <div class="kontakt-col">
          <h2>Napište nám vzkaz</h2>
          <ContactForm variant="kontakt" client:visible />
        </div>

        <div class="kontakt-col">
          <h2>Sklenářství RUSKÁ.</h2>
          <GoogleMap embedUrl={contact.map.embedUrl} client:visible />
        </div>
      </div>
    </div>
  </section>

  <section class="section section--map">
    <GoogleMap embedUrl={contact.map.embedUrl} client:visible />
  </section>
</BaseLayout>

<style>
  .kontakt-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-xl);
  }

  .kontakt-col h1,
  .kontakt-col h2 {
    font-size: 1.25rem;
    margin-bottom: var(--space-md);
    padding-bottom: 0.75rem;
    border-bottom: 2px solid var(--color-accent);
  }

  .section--map {
    padding: 0;
  }

  .section--map :global(.map-wrapper iframe) {
    height: 400px;
    border-radius: 0;
  }

  @media (max-width: 1024px) {
    .kontakt-grid {
      grid-template-columns: 1fr 1fr;
    }

    .kontakt-col:last-child {
      grid-column: 1 / -1;
    }
  }

  @media (max-width: 778px) {
    .kontakt-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
