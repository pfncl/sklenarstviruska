---
import BaseLayout from '../../layouts/BaseLayout.astro';
import ContactInfo from '../../components/contact/ContactInfo.astro';
import ContactForm from '../../components/contact/ContactForm.svelte';
import GoogleMap from '../../components/contact/GoogleMap.svelte';
import { t } from '../../i18n/translations';
import { getContact } from '../../data/contact';

const lang = 'en' as const;
const i18n = t(lang);
const contact = getContact(lang);
---

<BaseLayout
  title={i18n.seoTitleContact}
  description={i18n.seoDescContact}
  currentPath="/en/contact"
  lang={lang}
>
  <section class="section">
    <div class="container">
      <div class="kontakt-grid">
        <div class="kontakt-col">
          <h1>{i18n.contactHeading}</h1>
          <ContactInfo lang={lang} />
        </div>

        <div class="kontakt-col">
          <h2>{i18n.contactForm}</h2>
          <ContactForm variant="kontakt" lang={lang} client:visible />
        </div>

        <div class="kontakt-col">
          <h2>{i18n.contactCompany}</h2>
          <GoogleMap embedUrl={contact.map.embedUrl} client:visible />
        </div>
      </div>
    </div>
  </section>

  <section class="section section--map">
    <GoogleMap embedUrl={contact.map.embedUrl} client:visible />
  </section>
</BaseLayout>

<style>
  .kontakt-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-xl);
  }

  .kontakt-col h1,
  .kontakt-col h2 {
    font-size: 1.25rem;
    margin-bottom: var(--space-md);
    padding-bottom: 0.75rem;
    border-bottom: 2px solid var(--color-accent);
  }

  .section--map {
    padding: 0;
  }

  .section--map :global(.map-wrapper iframe) {
    height: 400px;
    border-radius: 0;
  }

  @media (max-width: 1024px) {
    .kontakt-grid {
      grid-template-columns: 1fr 1fr;
    }

    .kontakt-col:last-child {
      grid-column: 1 / -1;
    }
  }

  @media (max-width: 778px) {
    .kontakt-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
